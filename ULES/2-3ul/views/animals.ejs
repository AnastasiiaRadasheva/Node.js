<main class="container my-4">
    <div class="row g-4">
        <% animals.forEach(a => { %>
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <img src="<%= a.image %>" class="card-img-top" alt="<%= a.name %>">
                    <div class="card-body">
                        <h5 class="card-title mb-1"><%= a.name %></h5>
                        <ul class="list-unstyled mb-2">
                            <li><strong>Liik:</strong> <%= a.species %></li>
                            <li><strong>Vanus:</strong> <%= a.age %> aastat</li>
                            <li><strong>Staatus:</strong> <%= a.status %></li>
                        </ul>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</main>

