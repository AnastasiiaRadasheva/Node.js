<%- include("includes/head") %>
<%- include("includes/nav") %>

<div class="container">

    <h3>Lisa uudis</h3>

    <% if(errors && errors.length > 0) { %>
        <div class="alert alert-danger">
            <ul>
                <% errors.forEach(e => { %>
                    <li><%= e %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <form method="POST" action="/news/create">

        <div class="mb-3">
            <label class="form-label">Pealkiri</label>
            <input
                    class="form-control"
                    name="title"
                    value="<%= formData.title %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Sisu</label>
            <textarea
                    class="form-control"
                    name="content"
                    rows="6"><%= formData.content %></textarea>
        </div>

        <button class="btn btn-success">Salvesta</button>
        <a href="/" class="btn btn-secondary">Tagasi</a>

    </form>

</div>

<%- include("includes/footer") %>
