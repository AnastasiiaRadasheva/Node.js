<%- include("includes/head") %>
<%- include("includes/nav") %>

<div class="container">

    <h3>Muuda uudist</h3>

    <% if(errors && errors.length > 0) { %>
        <div class="alert alert-danger">
            <ul>
                <% errors.forEach(e => { %>
                    <li><%= e %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <form method="POST" action="/news/edit/<%= news.id %>">

        <div class="mb-3">
            <label class="form-label">Pealkiri</label>
            <input
                    class="form-control"
                    name="title"
                    value="<%= news.title %>">
        </div>

        <div class="mb-3">
            <label class="form-label">Sisu</label>
            <textarea
                    class="form-control"
                    name="content"
                    rows="6"><%= news.content %></textarea>
        </div>

        <button class="btn btn-primary">Salvesta</button>
        <a href="/news/<%= news.id %>" class="btn btn-secondary">Tagasi</a>

    </form>

</div>

<%- include("includes/footer") %>
