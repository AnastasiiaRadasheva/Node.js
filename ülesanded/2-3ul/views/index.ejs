<%- include('includes/head') %>
<%- include('includes/navbar') %>

<header class="py-5 bg-white border-bottom">
    <div class="container">
        <h1 class="mb-2">Avaleht</h1>
        <p class="text-muted mb-0">Viimased 4 lisatud looma</p>
    </div>
</header>

<main class="container my-4">
    <div class="row g-4">
        <% animals.forEach(a => { %>
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <img src="<%= a.image %>" class="card-img-top" alt="<%= a.name %>">
                    <div class="card-body">
                        <h5 class="card-title mb-1"><%= a.name %></h5>
                        <div class="small text-muted"><%= a.species %> • <%= a.age %> aastat</div>
                        <span class="badge text-bg-primary mt-2"><%= a.status %></span>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <div class="mt-4">
        <a class="btn btn-dark" href="/loomad">Vaata kõiki loomi</a>
    </div>
</main>

<%- include('includes/footer') %>
